<?xml version="1.0"?>
<perspective>
  <models>
    <model name="modules_generic/rootfolder">
      <children>
        <child model="modules_generic/folder"/>
        <child model="modules_payment/chequeconnector"/>
        <child model="modules_payment/atosconnector"/>
        <child model="modules_payment/cybermutconnector"/>
        <child model="modules_payment/paypalconnector"/>
        <child model="modules_payment/ogoneconnector"/>
        <child model="modules_payment/freeconnector"/>
      </children>
      <contextactions>
        <contextaction name="edit"/>
        <contextaction name="openTreeNodeOrder"/>
        <groupactions name="create_">
          <contextaction name="createChequeconnector"/>
          <contextaction name="createAtosconnector"/>
          <contextaction name="createCybermutconnector"/>
          <contextaction name="createPaypalconnector"/>
          <contextaction name="createOgoneconnector"/>
          <contextaction name="createFreeconnector"/>
          <contextaction name="createFolder"/>
        </groupactions>
      </contextactions>
      <drops>
        <drop model="modules_generic/folder" action="move"/>
        <drop model="modules_payment/chequeconnector" action="move"/>
        <drop model="modules_payment/atosconnector" action="move"/>
        <drop model="modules_payment/cybermutconnector" action="move"/>
        <drop model="modules_payment/paypalconnector" action="move"/>
        <drop model="modules_payment/ogoneconnector" action="move"/>
        <drop model="modules_payment/freeconnector" action="move"/>
      </drops>
    </model>
    <model name="modules_generic/folder">
      <children>
        <child model="modules_generic/folder"/>
        <child model="modules_payment/chequeconnector"/>
        <child model="modules_payment/atosconnector"/>
        <child model="modules_payment/cybermutconnector"/>
        <child model="modules_payment/paypalconnector"/>
        <child model="modules_payment/ogoneconnector"/>
        <child model="modules_payment/freeconnector"/>
      </children>
      <contextactions>
        <contextaction name="edit"/>
        <contextaction name="delete"/>
        <contextaction name="openTreeNodeOrder"/>
        <groupactions name="create_">
          <contextaction name="createChequeconnector"/>
          <contextaction name="createAtosconnector"/>
          <contextaction name="createCybermutconnector"/>
          <contextaction name="createPaypalconnector"/>
          <contextaction name="createOgoneconnector"/>
          <contextaction name="createFreeconnector"/>
          <contextaction name="createFolder"/>
        </groupactions>
        <contextaction name="openFolder"/> 
      </contextactions>
      <drops>
        <drop model="modules_generic/folder" action="move"/>
        <drop model="modules_payment/chequeconnector" action="move"/>
        <drop model="modules_payment/atosconnector" action="move"/>
        <drop model="modules_payment/cybermutconnector" action="move"/>
        <drop model="modules_payment/paypalconnector" action="move"/>
        <drop model="modules_payment/ogoneconnector" action="move"/>
        <drop model="modules_payment/freeconnector" action="move"/>
      </drops>
    </model>
    <model name="modules_payment/chequeconnector">
      <contextactions>
        <contextaction name="edit"/>
        <contextaction name="delete"/>
        <contextaction name="deactivated"/>
        <contextaction name="reactivate"/>
      </contextactions>
    </model>
    <model name="modules_payment/atosconnector">
      <contextactions>
        <contextaction name="edit"/>
        <contextaction name="delete"/>
        <contextaction name="deactivated"/>
        <contextaction name="reactivate"/>
      </contextactions>
    </model>
    <model name="modules_payment/cybermutconnector">
      <contextactions>
        <contextaction name="edit"/>
        <contextaction name="delete"/>
        <contextaction name="deactivated"/>
        <contextaction name="reactivate"/>
      </contextactions>
    </model>
    <model name="modules_payment/paypalconnector">
      <contextactions>
        <contextaction name="edit"/>
        <contextaction name="delete"/>
        <contextaction name="deactivated"/>
        <contextaction name="reactivate"/>
      </contextactions>
    </model>
    <model name="modules_payment/ogoneconnector">
      <contextactions>
        <contextaction name="edit"/>
        <contextaction name="delete"/>
        <contextaction name="deactivated"/>
        <contextaction name="reactivate"/>
      </contextactions>
    </model>
    <model name="modules_payment/freeconnector">
      <contextactions>
        <contextaction name="edit"/>
        <contextaction name="delete"/>
        <contextaction name="activate"/>
        <contextaction name="deactivated"/>
        <contextaction name="reactivate"/>
      </contextactions>
    </model>
  </models>
  <toolbar>
    <toolbarbutton name="edit"/>
    <toolbarbutton name="delete"/>
    <toolbarbutton name="deactivated"/>
    <toolbarbutton name="reactivate"/>
  </toolbar>
  <actions>
    <action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;"/>
    <action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;"/>
    <action name="deactivated" permission="Deactivated" icon="deactivated" label="&amp;modules.uixul.bo.actions.Deactivate;"/>
    <action name="reactivate" permission="ReActivate" icon="reactivate" label="&amp;modules.uixul.bo.actions.ReActivate;"/>
    <action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;"/>
    <action name="create_" single="true" icon="add"/>
    <action name="createFolder" single="true" permission="Insert_folder" label="&amp;modules.uixul.bo.actions.Create-folder;"/>
    <action name="createChequeconnector" single="true" permission="Insert_chequeconnector" label="&amp;modules.payment.bo.actions.Create-Chequeconnector;"/>
    <action name="createAtosconnector" single="true" permission="Insert_atosconnector" label="&amp;modules.payment.bo.actions.Create-Atosconnector;"/>
    <action name="createCybermutconnector" single="true" permission="Insert_cybermutconnector" label="&amp;modules.payment.bo.actions.Create-Cybermutconnector;"/>
    <action name="createPaypalconnector" single="true" permission="Insert_paypalconnector" label="&amp;modules.payment.bo.actions.Create-Paypalconnector;"/>
    <action name="createOgoneconnector" single="true" permission="Insert_ogoneconnector" label="&amp;modules.payment.bo.actions.Create-Ogoneconnector;"/>
    <action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;"/>
    <action name="openFolder" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;"/>
    <action name="createFreeconnector" single="true" permission="Insert_freeconnector" icon="add" label="&amp;modules.payment.bo.actions.Create-freeconnector;"/>
  </actions>
</perspective>
